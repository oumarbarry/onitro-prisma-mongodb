datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

// ================ MODELS ===================

model Movie {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
}
